[global/wm]
margin-top = 4
margin-bottom = 6

[bar/mybar]
monitor = VGA-1

width = 100%
height = 20

font-0 = Fira Mono:size=8:weight=bold;2
font-1 = FontAwesome:size=11;3

background = ${colors.background}
foreground = ${colors.foreground}

tray-position = right
tray-maxsize = 16
tray-padding 10

modules-left = i3 xwindow
modules-center =
modules-right = spotify-icon spotify updates volume battery wireless-network wired-network calendar clock 
powermenu

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

[module/xwindow]
type = internal/xwindow

label = %title%
label-maxlen = 75

format-foreground = ${colors.background}
format-background = ${colors.magenta}
format-prefix = " "
format-suffix = " "

format-margin = 1

[module/updates]
type = custom/script
interval = 300
format = <label>
format-underline = #dc322f
label = "%output:0:30%"
exec = ~/.config/polybar/updates.sh
exec-if = "ping -q -w 2 -c 1 176.34.135.167 > /dev/null"

[module/spotify]
type = custom/script
format =  <label>
exec = ~/.config/polybar/spotify.sh
