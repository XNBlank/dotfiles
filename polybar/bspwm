[colors]
background = ${xrdb:background}
background-alt = ${xrdb:color8}
foreground = ${xrdb:foreground}
foreground-alt = ${xrdb:color7}
red = ${xrdb:color1}
orange = ${xrdb:color9}
green = ${xrdb:color10}
yellow = ${xrdb:color11}
blue = ${xrdb:color12}
purple = ${xrdb:color13}
cyan = ${xrdb:color14}
primary = ${colors.green}
secondary = ${xrdb:color4}
alert = ${xrdb:color1}

[bar/archi3]
monitor = ${env:MONITOR:}
width = 100%:-24
height = 32
offset-x = 12
offset-y = 12
radius = 8.0
:fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = ${colors.primary}

; border-size = 2
border-color = ${colors.background-alt}

padding-left = 8
padding-right = 8

module-margin-left = 1
module-margin-right = 1

font-0 = San Francisco Text:size=11;2
font-1 = Font Awesome 5 Free Solid:size=10;3
font-2 = San Francisco Text:style=Bold:size=11;2
font-3 = Font Awesome 5 Brands:size=10;3
font-4 = San Francisco Text:style=Bold:size=11;2

modules-left = powermenu bspwm xwindow
modules-center = 
modules-right = playing back play next cal 

tray-position = none
tray-padding = 2
tray-maxsize = 16

wm-restack = bspwm
override-redirect = false

scroll-up = bspwm-desknext
scroll-down = bspwm-deskprev

cursor-click = default
cursor-scroll = ns-resize

[module/onboard]
type = custom/script
exec = echo 
click-left = onboard &
interval = 3600

[module/cal]
type = custom/script
exec = date '+%a %l:%M %p' | sed 's/  / /'
interval = 30
format-foreground = ${colors.foreground}
label-font = 5

[module/playing]
type = custom/script
exec = ~/.local/bin/playing.sh
exec-if = playerctl status
interval = 5
format-foreground = ${colors.foreground}
label-font = 5

[module/play]
type = custom/script
interval = 5
exec-if = playerctl status
exec = if playerctl status | grep Paused >/dev/null; then echo -n ; else echo -n ; fi
format-foreground = ${colors.foreground}
click-left = playerctl play-pause

[module/back]
type = custom/script
interval = 5
exec-if = playerctl status
exec = echo -n 
format-foreground = ${colors.foreground}
click-left = playerctl previous

[module/next]
type = custom/script
interval = 5
exec-if = playerctl status
exec = echo -n 
format-foreground = ${colors.foreground}
click-left = playerctl next

[module/8bitday]
type = custom/script
interval = 3600
exec = feh --bg-scale "$HOME/Pictures/$(date +%H)-day.png" 2>/dev/null

[module/xwindow]
type = internal/xwindow
label = %title:0:72:…%
;label = %title%
label-foreground = ${colors.foreground}
label-font = 5

[module/bspwm]
type = internal/bspwm

label-focused = %name%
label-focused-foreground = ${colors.primary}
label-focused-underline= ${colors.primary}
label-focused-padding = 2

label-occupied = %name%
label-occupied-padding = 2

label-urgent = %name%
label-urgent-foreground = ${colors.alert}
label-urgent-padding = 2
label-urgent-overline = ${colors.alert}
label-urgent-underline = ${colors.alert}

label-empty = %name%
label-empty-foreground = ${colors.foreground-alt}
label-empty-padding = 2

;[module/mpd]
;type = internal/mpd
;format-online = <label-song>  <icon-prev> <icon-stop> <toggle> <icon-next>

;icon-prev = 
;icon-stop = 
;icon-play = 
;icon-pause = 
;icon-next = 

;label-song-maxlen = 25
;label-song-ellipsis = true

;[module/xbacklight]
;type = internal/xbacklight

;format = <label> <bar>
;label = BL

;bar-width = 10
;bar-indicator = |
;bar-indicator-foreground = #ff
;bar-indicator-font = 2
;bar-fill = ─
;bar-fill-font = 2
;bar-fill-foreground = #9f78e1
;bar-empty = ─
;bar-empty-font = 2
;bar-empty-foreground = ${colors.foreground-alt}

[module/temperature]
type = internal/temperature
thermal-zone = 2
warn-temperature = 75

format = 
format-underline = ${colors.orange}
format-warn = <ramp> <label-warn>
;format-warn-underline = ${self.format-underline}

label = %temperature%
label-warn = %temperature%
label-warn-foreground = ${colors.orange}

ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-foreground = ${colors.orange}

[module/powermenu]
type = custom/menu

expand-right = true

format-spacing = 1

label-open = 
label-close = 
label-open-foreground = ${colors.foreground}
label-close-foreground = ${colors.foreground-alt}
label-separator = |
label-separator-foreground = ${colors.background-alt}

menu-0-0 = 
menu-0-0-foreground = ${colors.foreground}
menu-0-0-exec = ~/.local/bin/reload
menu-0-1 = 
menu-0-1-foreground = ${colors.foreground}
menu-0-1-exec = mate-session-save --logout-dialog
menu-0-2 = 
menu-0-2-foreground = ${colors.foreground}
menu-0-2-exec = mate-session-save  --shutdown-dialog

[settings]
screenchange-reload = true
compositing-overline = source
compositing-underline = source
compositing-background = source
compositing-foreground = source
compositing-border = source

[global/wm]
margin-top = 0
margin-bottom = 0
